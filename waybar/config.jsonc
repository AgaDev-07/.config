// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 15, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
	"custom/power",
	"custom/player",
        "clock"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "cpu",
        "memory",
	"disk",
        "backlight",
        "battery",
        "battery#bat2"
    ],
    // Modules configuration
     "hyprland/workspaces": {
         "all-outputs": true,
         "format": "{icon}",
         "format-icons": {
             "active": "ÔÜí",
             "default": "ÔÑë"
         },
         "persistent-workspaces": {
             "*": 10
         }
     },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "clock": {
	"interval": 1,
        // "timezone": "America/New_York",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
	"format": "{:%H:%M:%S}"
    },
    "cpu": {
    	"format": "CPU {usage}% Ôãõ", 
    	"interval": 5,
        "states": {
                "warning": 70,
                "critical": 90
        }
    },
    "memory": {
    	"format": "{percentage}% ÓøÖ",
	"format-alt": "RAM {used:0.1f}/{total:0.1f}G",
    	"interval": 5,
    	"states": {
        	"warning": 70,
        	"critical": 90
    	}
    },
    "disk": {
        "format": "{used} ÔÇ†"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "{volume}% Ôö© {icon}Ôäî {format_source}",
        "format-muted": "{volume}% Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
	"tooltip-format": "{format_source}: {source_volume}%\n{icon}: {volume}%",
        "on-click": "pavucontrol",
	"on-click-middle": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
	"on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },
    "custom/player": {
    	"exec": "player=$(playerctl -l 2>/dev/null | head -n1); title=$(playerctl metadata --format '{{ title }}' 2>/dev/null || echo 'Sin reproducci√≥n'); artist=$(playerctl metadata --format '{{ artist }}' 2>/dev/null || echo ''); if [[ $player == *'spotify'* ]]; then icon='ÔÜº'; elif [[ $player == *'brave'* ]] || [[ $player == *'chromium'* ]]; then icon='Ôâ®'; else icon='üéµ'; fi; max=30; [ ${#title} -gt $max ] && title=\"${title:0:$max}...\"; echo \"$icon  $artist: $title\"",
       	"interval": 2,
    	"return-type": "text",
    	"on-click": "playerctl play-pause"
    },
    "custom/power": {
        "format" : "‚èª",
	"tootltip": false,
	"on-click": "~/.config/waybar/power_menu.sh"
    }
}
